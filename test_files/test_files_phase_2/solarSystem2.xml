<world>
    <window width="1024" height="768" />
    <camera>
        <position x="0" y="50" z="150" />
        <lookAt x="0" y="0" z="0" />
        <up x="0" y="1" z="0" />
        <projection fov="60" near="1" far="10000" />
    </camera>

    <!-- Sun (center of the solar system) -->
    <group>
        <transform>
            <scale x="5" y="5" z="5" />
        </transform>
        <models>
            <model file="sphere.3d" />
        </models>
        
        <!-- Mercury Orbit (88 day orbit, ~4.09° per day) -->
        <!-- March 2025 position: ~110° from reference point -->
        <group>
            <transform>
                <rotate angle="110" x="0" y="1" z="0" />
                <translate x="10" y="0" z="0" />
                <scale x="0.4" y="0.4" z="0.4" />
            </transform>
            <models>
                <model file="sphere.3d" />
            </models>
        </group>
        
        <!-- Venus Orbit (225 day orbit, ~1.6° per day) -->
        <!-- March 2025 position: ~70° from reference point -->
        <group>
            <transform>
                <rotate angle="70" x="0" y="1" z="0" />
                <translate x="15" y="0" z="0" />
                <scale x="0.6" y="0.6" z="0.6" />
            </transform>
            <models>
                <model file="sphere.3d" />
            </models>
        </group>
        
        <!-- Earth Orbit (365 day orbit, ~0.986° per day) -->
        <!-- March 2025 position: ~80° from reference point (March is ~80 days into year) -->
        <group>
            <transform>
                <rotate angle="80" x="0" y="1" z="0" />
                <translate x="20" y="0" z="0" />
                <scale x="0.6" y="0.6" z="0.6" />
            </transform>
            <models>
                <model file="sphere.3d" />
            </models>
            
            <!-- Moon Orbit (27.3 day orbit, ~13.2° per day) -->
            <!-- Position relative to Earth: ~120° -->
            <group>
                <transform>
                    <rotate angle="120" x="0" y="1" z="0" />
                    <translate x="3" y="0" z="0" />
                    <scale x="0.2" y="0.2" z="0.2" />
                </transform>
                <models>
                    <model file="sphere.3d" />
                </models>
            </group>
        </group>
        
        <!-- Mars Orbit (687 day orbit, ~0.524° per day) -->
        <!-- March 2025 position: ~120° from reference point -->
        <group>
            <transform>
                <rotate angle="120" x="0" y="1" z="0" />
                <translate x="25" y="0" z="0" />
                <scale x="0.5" y="0.5" z="0.5" />
            </transform>
            <models>
                <model file="sphere.3d" />
            </models>
        </group>
        
        <!-- Jupiter Orbit (4333 day orbit, ~0.083° per day) -->
        <!-- March 2025 position: ~30° from reference point -->
        <group>
            <transform>
                <rotate angle="30" x="0" y="1" z="0" />
                <translate x="35" y="0" z="0" />
                <scale x="1.2" y="1.2" z="1.2" />
            </transform>
            <models>
                <model file="sphere.3d" />
            </models>
        </group>
        
        <!-- Saturn Orbit (10759 day orbit, ~0.033° per day) -->
        <!-- March 2025 position: ~160° from reference point -->
        <group>
            <transform>
                <rotate angle="160" x="0" y="1" z="0" />
                <translate x="45" y="0" z="0" />
                <scale x="1.0" y="1.0" z="1.0" />
            </transform>
            <models>
                <model file="sphere.3d" />
            </models>
            
            <!-- Saturn's Rings -->
            <group>
                <transform>
                    <rotate angle="30" x="1" y="0" z="0" />
                    <scale x="0.2" y="0.1" z="0.2" />
                </transform>
                <models>
                    <model file="torus.3d" />
                </models>
            </group>
        </group>
        
        <!-- Uranus Orbit (30687 day orbit, ~0.012° per day) -->
        <!-- March 2025 position: ~220° from reference point -->
        <group>
            <transform>
                <rotate angle="220" x="0" y="1" z="0" />
                <translate x="55" y="0" z="0" />
                <scale x="0.8" y="0.8" z="0.8" />
            </transform>
            <models>
                <model file="sphere.3d" />
            </models>
        </group>
        
        <!-- Neptune Orbit (60190 day orbit, ~0.006° per day) -->
        <!-- March 2025 position: ~300° from reference point -->
        <group>
            <transform>
                <rotate angle="300" x="0" y="1" z="0" />
                <translate x="65" y="0" z="0" />
                <scale x="0.8" y="0.8" z="0.8" />
            </transform>
            <models>
                <model file="sphere.3d" />
            </models>
        </group>
    </group>
</world>